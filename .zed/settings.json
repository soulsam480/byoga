{
  "format_on_save": "on",
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "prettier": {
        "allowed": true
      },
      "formatter": {
        "code_actions": {
          // Use ESLint's --fix:
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "prettier": {
        "allowed": true
      },
      "formatter": {
        "code_actions": {
          // Use ESLint's --fix:
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "format_on_save": "on",
      "prettier": {
        "allowed": true
      },
      "formatter": {
        "code_actions": {
          // Use ESLint's --fix:
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "lsp": {
    "eslint": {
      "format": true,
      "rules": {
        "customizations": [
          {
            "rule": "style/*",
            "severity": "off"
          },
          {
            "rule": "format/*",
            "severity": "off"
          },
          {
            "rule": "*-indent",
            "severity": "off"
          },
          {
            "rule": "*-spacing",
            "severity": "off"
          },
          {
            "rule": "*-spaces",
            "severity": "off"
          },
          {
            "rule": "*-order",
            "severity": "off"
          },
          {
            "rule": "*-dangle",
            "severity": "off"
          },
          {
            "rule": "*-newline",
            "severity": "off"
          },
          {
            "rule": "*quotes",
            "severity": "off"
          },
          {
            "rule": "*semi",
            "severity": "off"
          }
        ]
      },
      "validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "html",
        "markdown",
        "json",
        "jsonc",
        "yaml",
        "css"
      ]
    }
  }
}
